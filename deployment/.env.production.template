# Production Environment Configuration Template
# Copy to .env.production and update values for your deployment

# ================================
# APPLICATION CONFIGURATION
# ================================
ENVIRONMENT=production
APP_PORT=8000

# ================================
# SECURITY CONFIGURATION
# ================================
# CRITICAL: Generate secure random keys for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"

# API Authentication Key (minimum 32 characters)
MVP_API_KEY=REPLACE_WITH_SECURE_API_KEY_MIN_32_CHARS

# Session Secret Key (minimum 32 characters)
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_MIN_64_CHARS

# Development mode (MUST be false in production)
DEVELOPMENT_MODE=false

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL Connection (REQUIRED in production)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Alternative: Component-based configuration
POSTGRES_DB=student_success
POSTGRES_USER=app_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_DB_PASSWORD

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ================================
# RATE LIMITING
# ================================
# API Requests per minute
API_RATE_LIMIT=30

# File uploads per hour
UPLOAD_RATE_LIMIT=10

# Authentication attempts per hour
AUTH_RATE_LIMIT=5

# ================================
# FILE HANDLING
# ================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=INFO
SQL_DEBUG=false

# ================================
# PERFORMANCE TUNING
# ================================
# ML Model Settings
ML_MODEL_CACHE_TTL=3600
MAX_MODEL_MEMORY_MB=1024
MODEL_WARMUP_ENABLED=true

# ================================
# MONITORING & HEALTH CHECKS
# ================================
HEALTH_CHECK_TIMEOUT=10
METRICS_ENABLED=true

# ================================
# SSL/TLS CONFIGURATION
# ================================
# Set to true if using HTTPS
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ================================
# EXTERNAL SERVICES
# ================================
# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Error tracking (optional)
SENTRY_DSN=

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ================================
# SECURITY HEADERS
# ================================
# Content Security Policy
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:

# ================================
# DEPLOYMENT METADATA
# ================================
DEPLOY_VERSION=1.0.0
DEPLOY_DATE=2024-01-01
DEPLOY_ENVIRONMENT=production