# Student Success Prediction - Environment Configuration
# Copy this file to .env and update with your settings

# Database Configuration (PostgreSQL recommended for production)
# If not set, will fallback to SQLite for local development

# Option 1: Full database URL
#DATABASE_URL=

# Option 2: Component-based configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=student_success
DB_USER=postgres
DB_PASSWORD=postgres

# API Configuration
MVP_API_KEY=dev-key-change-me
API_HOST=0.0.0.0
API_PORT=8001

# Security Settings
SECRET_KEY=your-secret-key-here
ENABLE_HTTPS=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8001

# ML Configuration
MODEL_VERSION=1.0
ENABLE_MODEL_CACHING=true
PREDICTION_BATCH_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO
SQL_DEBUG=false
ENABLE_AUDIT_LOGGING=true

# Institution Settings (for multi-tenant deployment)
DEFAULT_INSTITUTION_NAME=MVP Demo Institution
DEFAULT_INSTITUTION_CODE=MVP_DEMO
DEFAULT_INSTITUTION_TYPE=demo

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=csv,xlsx

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

