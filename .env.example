# Environment Configuration Template
# Copy this file to .env and update values for your environment

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=false

# API Configuration
API_KEY=your-secure-api-key-here
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL (Production)
DATABASE_URL=postgresql://student_user:your-password@localhost:5432/student_success_db

# Individual database components (alternative to DATABASE_URL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=student_success_db
POSTGRES_USER=student_user
POSTGRES_PASSWORD=your-secure-password

# Database pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# REDIS CONFIGURATION (Optional)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL=3600

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
MODEL_PATH=/app/results/models
MODEL_VERSION=v1.0
MODEL_CACHE_SIZE=100
PREDICTION_TIMEOUT_SECONDS=30

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Sentry (Error tracking)
SENTRY_DSN=

# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=8001

# Application insights
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Log configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/api.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@example.com

# Slack notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================
# Container orchestration
CONTAINER_NAME=student-success-api
RESTART_POLICY=unless-stopped

# Resource limits
MEMORY_LIMIT=2g
CPU_LIMIT=1.0

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# Database backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=student-success-backups
BACKUP_S3_REGION=us-west-2

# ============================================================================
# DEVELOPMENT SETTINGS (dev/staging only)
# ============================================================================
# Data migration
MIGRATE_DATA=false
SAMPLE_DATA_SIZE=1000

# Debug features
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_PROFILING=false
ENABLE_SQL_ECHO=false

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/test_student_success_db