# Production Environment Configuration
# ⚠️  WARNING: This file contains production settings. Keep secure!

# Application
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false

# API
API_KEY=${API_KEY}
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=${DATABASE_URL}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Security
JWT_SECRET=${JWT_SECRET}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001
SENTRY_DSN=${SENTRY_DSN}

# Resource limits
MEMORY_LIMIT=4g
CPU_LIMIT=2.0

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90

# Rate limiting (stricter for production)
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=5

# Disable debug features
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_PROFILING=false
ENABLE_SQL_ECHO=false