{
  "test_suites": {
    "unit_tests": {
      "enabled": true,
      "command": "python -m pytest tests/unit/ -v --tb=short",
      "timeout": 300
    },
    "api_tests": {
      "enabled": true,
      "command": "python -m pytest tests/unit/test_api_endpoints.py -v",
      "timeout": 300
    },
    "notification_tests": {
      "enabled": true,
      "command": "python -m pytest tests/unit/test_notifications.py -v",
      "timeout": 300
    },
    "integration_tests": {
      "enabled": true,
      "command": "python -m pytest tests/unit/test_integrations.py -v",
      "timeout": 300
    }
  },
  "coverage": {
    "enabled": true,
    "min_coverage": 70,
    "exclude_patterns": [
      "*/venv/*",
      "*/tests/*",
      "*/__pycache__/*"
    ]
  },
  "performance": {
    "enabled": true,
    "benchmarks": [
      "model_prediction",
      "api_response",
      "database_query"
    ]
  },
  "reporting": {
    "formats": [
      "console",
      "json",
      "html"
    ],
    "output_dir": "test_reports"
  },
  "notifications": {
    "on_failure": true,
    "on_success": false,
    "email_enabled": false
  }
}