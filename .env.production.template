# Production Environment Configuration Template
# Copy this to .env.production and configure with your actual values
# ⚠️  WARNING: Never commit .env.production to version control!

# Application
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false

# Security - CRITICAL: Set these to strong, unique values
JWT_SECRET_KEY=your-256-bit-secret-key-here
ADMIN_API_KEY=admin-super-secure-random-key-32-chars
TEACHER_API_KEY=teacher-secure-random-key-32-chars
READONLY_API_KEY=readonly-secure-random-key-32-chars

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database - Configure with your production database
DATABASE_URL=postgresql://username:password@host:port/database
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Network Security
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting (production values)
RATE_LIMIT_DEFAULT=100,3600
RATE_LIMIT_UPLOAD=10,3600
RATE_LIMIT_ANALYSIS=50,3600
RATE_LIMIT_AUTH=5,300

# SSL/TLS Configuration
FORCE_HTTPS=true
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/key.pem

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001
SENTRY_DSN=your-sentry-dsn-here

# Resource Limits
MEMORY_LIMIT=4g
CPU_LIMIT=2.0

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90

# Security Features
DEVELOPMENT_MODE=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_PROFILING=false
ENABLE_SQL_ECHO=false
SECURITY_LOGGING=true

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=text/csv,application/csv,text/plain

# Session Security
SESSION_TIMEOUT=30
SECURE_COOKIES=true
SAMESITE_COOKIES=strict

# Emergency Contacts
SECURITY_EMAIL=security@yourdomain.com
SECURITY_WEBHOOK_URL=https://your-monitoring-system.com/webhook